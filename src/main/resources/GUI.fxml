<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.control.Label?>
<VBox fx:controller="de.techfak.se.mmoebius.controller.Controller" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:id="containerV">
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>
    <Button onAction="#buttonClicked"
            alignment="BOTTOM_RIGHT">Check Move</Button>
    <HBox fx:id="dices" spacing="10">
        <padding>
            <Insets topRightBottomLeft="10"/>
        </padding>
        <VBox>
            <Rectangle fx:id="diceOneColor">
                <x> -24 </x>
                <y> -24 </y>
                <height> 48 </height>
                <width> 48 </width>
            </Rectangle>
            <Rectangle fx:id="diceTwoColor">
                <x> -24 </x>
                <y> -24 </y>
                <height> 48 </height>
                <width> 48 </width>
            </Rectangle>
            <Rectangle fx:id="diceThreeColor">
                <x> -24 </x>
                <y> -24 </y>
                <height> 48 </height>
                <width> 48 </width>
            </Rectangle>
        </VBox>
        <VBox>
            <Label fx:id="diceOneNumber"></Label>
            <Label fx:id="diceTwoNumber"></Label>
            <Label fx:id="diceThreeNumber"></Label>
        </VBox>
    </HBox>
</VBox>

