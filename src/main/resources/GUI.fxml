<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<VBox fx:controller="de.techfak.se.mmoebius.controller.Controller" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:id="containerV">
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>
    <HBox spacing="500">
        <Button onAction="#buttonClicked"
                alignment="BOTTOM_RIGHT">Check Move</Button>
        <VBox spacing="20">
            <Button onAction="#startGame"> Start Game </Button>
            <Label fx:id="gameStatus">  </Label>
        </VBox>
    </HBox>
    <HBox fx:id="dices" spacing="10">
        <padding>
            <Insets topRightBottomLeft="10"/>
        </padding>
    </HBox>
    <Label fx:id="points"> Points: 0 </Label>
</VBox>

